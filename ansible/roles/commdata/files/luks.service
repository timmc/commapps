[Unit]
Description=Community Data: LUKS-encrypted partition

[Service]
Type=oneshot
RemainAfterExit=True
ExecStart=/opt/commapps/encfs/luks/unlock.sh
ExecStop=/opt/commapps/encfs/luks/lock.sh

# Technically not needed, since could just rely on commdata-zfs
# to ask for this service to be started at startup.
[Install]
WantedBy=multi-user.target
